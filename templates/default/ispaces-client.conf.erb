[global]
logfile_path=<%= node[:interactivespaces][:ispaces_client][:logfile_path] %>
debug=notimplemented_yet
ssh_command=<%= node[:interactivespaces][:ispaces_client][:ssh_command] %>
controllers_list=<%= @display_nodes %>

[master]
#hostname portion of master API
host=<%= node[:interactivespaces][:ispaces_client][:master_host] %>
#port portion of master API
port=<%= node[:interactivespaces][:ispaces_client][:master_http_port] %>
#command that will be executed to launch interactivespaces master
launch_command=<%= node[:interactivespaces][:ispaces_client][:master_launch_command] %>
#command that will be executed to stop interactivespaces master process
stop_command=<%= node[:interactivespaces][:ispaces_client][:master_stop_command] %>
#command taht will be executed to make sure that there are no duplicate tmux sessions
destroy_tmux_command=<%= node[:interactivespaces][:ispaces_client][:master_destroy_tmux_command] %>


[relaunch]
#ordered list of live activity groups that will be relaunched (from left to right)
relaunch_sequence=<%= @relaunch_sequence %>
#how many times should we retry shutting down all chosen activities
shutdown_attempts=<%= node[:interactivespaces][:ispaces_client][:relaunch][:shutdown_attempts] %>
#how many times should we retry to start up live activities
startup_attempts=<%= node[:interactivespaces][:ispaces_client][:relaunch][:startup_attempts] %>
#default interval for "wait()" method in seconds
interval_between_attempts=<%= node[:interactivespaces][:ispaces_client][:relaunch][:interval_between_attempts] %>
#specifies whether we should _always_ kill/launch controllers on ispaces relaunch
relaunch_controllers=<%= node[:interactivespaces][:ispaces_client][:relaunch][:relaunch_controllers] %>
#specifies whether we should _always_ kill/launch master process on ispaces relaunch
relaunch_master=<%=node[:interactivespaces][:ispaces_client][:relaunch][:relaunch_master] %>

<% @display_nodes_list.each do |display_node| -%>
[<%= display_node['hostname'] %>]
#controller name as seen on the list of space controllers in interactivespaces /spacecontroller/all.html
name=<%= display_node['ispaces_controller_name'] %>
#hostname of the display node that runs the controller
hostname=<%= display_node['hostname'] %>
#command that will be executed on the display node in order to launch the controller
launch_command=<%= node[:interactivespaces][:ispaces_client][:launch_command] %>
#command that stops the interactivespaces process
stop_command=<%= node[:interactivespaces][:ispaces_client][:stop_command] %>
#command that makes sure there's no duplicated tmux session
destroy_tmux_command=<%= node[:interactivespaces][:ispaces_client][:destroy_tmux_command] %>
#notimplemented
pid_command=<%= node[:interactivespaces][:ispaces_client][:pid_command] %>

<% end -%>
